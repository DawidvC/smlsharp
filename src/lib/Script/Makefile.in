srcdir = @srcdir@
builddir = @builddir@
top_srcdir = @top_srcdir@
top_builddir = @top_builddir@

include @top_builddir@commonrule

VPATH = $(srcdir)

# FIXME: all generating files should be placed in builddir, not in srcdir.

doc:
	-$(MAKE) smldoc

smldoc: 
	@if test 'x$(SMLDOC)' = 'x'; then \
	  echo '*** smldoc not found.'; exit 1; \
	fi
	-rm -rf ./doc/api
	mkdir -p ./doc/api
	cp $(srcdir)/smldoc.cfg.in ./smldoc.cfg
	$(FIND) $(srcdir)/main -name '*.sml' -o -name '*.sig' >> ./smldoc.cfg
	$(SMLDOC) -a ./smldoc.cfg --overview=$(srcdir)/Overview.html

clean:
	-rm -f ./smldoc.cfg
	-rm -rf ./doc/api
