srcdir = @srcdir@
builddir = @builddir@
top_srcdir = @top_srcdir@
top_builddir = @top_builddir@

include @top_builddir@commonrule

VPATH = $(srcdir)

SOURCES = Instructions.cc

OBJECTS = $(SOURCES:.cc=.$(OBJEXT))

TARGETS = libimlinstructions.$(LIBEXT)

all: $(TARGETS)

clean:
	-rm -f $(OBJECTS) $(TARGETS)

libimlinstructions.$(LIBEXT): $(OBJECTS)
	$(AR) rcu $@ $(OBJECTS)
	-$(RANLIB) $@

# FIXME: dependency
Instructions.$(OBJEXT): Instructions.cc Instructions.hh
