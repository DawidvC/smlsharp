srcdir = @srcdir@
builddir = @builddir@
top_srcdir = @top_srcdir@
top_builddir = @top_builddir@

include @top_builddir@commonrule

VPATH = $(srcdir)

SOURCES = Primitives.ppg \
	  ConstantTerm.ppg

DERIVED_FILES = $(srcdir)/Primitives.ppg $(srcdir)/Constants.sml
TARGETS = $(srcdir)/Primitives.ppg.sml $(srcdir)/ConstantTerm.ppg.sml

all: $(TARGETS)

clean:
	-rm -rf $(srcdir)/CM $(srcdir)/.cm
	-rm -f $(TARGETS)
	-rm -f $(DERIVED_FILES)

$(srcdir)/Primitives.ppg.sml: Primitives.ppg
$(srcdir)/ConstantTerm.ppg.sml: ConstantTerm.ppg
