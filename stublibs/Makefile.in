srcdir = @srcdir@
builddir = @builddir@
top_srcdir = @top_srcdir@
top_builddir = @top_builddir@

include @top_builddir@commonrule

TARGETS = $(STUBLIBS:.def=.$(DLSTUBEXT))

all: $(TARGETS)

clean:
	-rm -f $(TARGETS)

libjvm.$(DLSTUBEXT): libjvm.def
	$(DLLTOOL) --input-def $^ --kill-at --dllname jvm.dll --output-lib $@ --add-stdcall-alias
