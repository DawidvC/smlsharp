	-rm -f $(srcdir)/parser/main/interface.grm.desc
	$(MLTON_YACC) $(srcdir)/parser/main/interface.grm
	mv $(srcdir)/parser/main/interface.grm.sig \
	   $(srcdir)/parser/main/interface.grm.mlton.sig
	mv $(srcdir)/parser/main/interface.grm.sml \
	   $(srcdir)/parser/main/interface.grm.mlton.sml

$(srcdir)/parser/main/interface.lex.mlton.sml: parser/main/interface.lex
